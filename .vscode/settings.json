{
    "python.linting.pylintEnabled": false,
    "ruff.enable": true,
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "pylint.importStrategy": "fromEnvironment",
    "pylint.args": [
        "--ignored-modules=cv2",
        "--ignored-classes=cv2",
        "--extension-pkg-whitelist=cv2",
        "--generated-members=numpy.* ,torch.*",
        "--disable=too-many-arguments,too-many-locals,too-many-instance-attributes,missing-function-docstring,unused-variable,unused-argument,missing-module-docstring,line-too-long"
    ],
}